<body>
    <!-- update the header -->
    <h1>Edit <%= shop.name %></h1>
    <form action="/shops/<%=shop._id%>?method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" value="<%= shop.name %>" />
  
      <label for="offersDelivery">Offers Delivery</label>
      <input type="checkbox" name="offersDelivery" <% if (shop.offersDelivery) { %>checked<% } %> >
      <!-- update the button text -->
      <button type="submit">Update Shop</button>
    </form>
    <a href="/shops">Back to Shops</a>
  </body>
  